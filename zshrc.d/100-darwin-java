# Set JAVA_HOME if JDK exists
if [ -d /Library/Java/JavaVirtualMachines/jdk-21.0.8.jdk/Contents/Home ]; then
  export JAVA_HOME=/Library/Java/JavaVirtualMachines/jdk-21.0.8.jdk/Contents/Home
# elif [ -d /Library/Java/JavaVirtualMachines/jdk-24.jdk/Contents/Home ]; then
#   export JAVA_HOME=/Library/Java/JavaVirtualMachines/jdk-24.jdk/Contents/Home
# elif [ -d /Library/Java/JavaVirtualMachines/graalvm-jdk-24.0.2+11.1/Contents/Home ]; then
#   export JAVA_HOME=/Library/Java/JavaVirtualMachines/graalvm-jdk-24.0.2+11.1/Contents/Home
fi

# Add JAVA_HOME/bin to PATH with priority (intentionally not using addpath)
[ -n "$JAVA_HOME" ] && export PATH=$JAVA_HOME/bin:$PATH
