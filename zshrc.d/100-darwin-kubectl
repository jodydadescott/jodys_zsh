# Full path to bin is required because path is being built
source <(/opt/homebrew/bin/kubectl completion zsh)

alias k=kubectl

function kset() {
  [[ "$1" ]] && {
    k config use-context "$1"
  } || {
    k config get-contexts --output=name
  }
}

function knset() {
  [[ "$1" ]] && {
    k config set-context --current --namespace="$1"
  } || {
    k get ns
  }
}
