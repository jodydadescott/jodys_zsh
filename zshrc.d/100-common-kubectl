# Load kubectl completion if available
if command -v kubectl &>/dev/null; then
  source <(kubectl completion zsh)
fi

alias k=kubectl

function kset() {
  [[ "$1" ]] && {
    k config use-context "$1"
  } || {
    k config get-contexts --output=name
  }
}

function knset() {
  [[ "$1" ]] && {
    k config set-context --current --namespace="$1"
  } || {
    k get ns
  }
}
