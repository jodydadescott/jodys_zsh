alias ap.auth='f() {
  [[ $APOCTL_API ]] && {
    err "Using API $APOCTL_API"
    export APOCTL_TOKEN=$(apoctl auth google --api $APOCTL_API)
    return $?
  } || {
    err "Using API Default"
    export APOCTL_TOKEN=$(apoctl auth google)
    return $?
  }
};f'

alias ap.auth.verify='apoctl auth verify'

alias ap.help='apoctl api all | xargs -n1'

# Apoctl auto completion
. <(apoctl completion zsh)
